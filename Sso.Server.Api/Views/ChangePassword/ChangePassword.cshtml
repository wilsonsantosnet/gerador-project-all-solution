
<div class="modal-dialog" role="document">
    <form action="ChangePassword" method="post">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Alterar senha</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fa fa-close"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <p>Digite sua nova senha.</p>
                            <div class="form-group">
                                <label class="label sr-only">New Password</label>
                                <div class="form-group-icons ">
                                    <input type="password" class="form-control" placeholder="New Password" name="newPassword">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label class="label sr-only">Confirm New Password</label>
                                <div class="form-group-icons ">
                                    <input type="password" class="form-control" placeholder="Confirm new password" name="newConfPassword">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" value="Redefinir" />
                <a class="btn btn-secondary" data-dismiss="modal" asp-action="GoBack">Cancelar</a>
            </div>
        </div>
    </form>
</div>